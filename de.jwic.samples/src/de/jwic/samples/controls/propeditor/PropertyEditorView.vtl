#if($control.getErrorMessage() != "")
<div style="background-color: red; color: #fff; font-size: 8pt;">$control.getErrorMessage()</div>
#end
<table class="datatable" width="100%" cellspacing="0" cellpadding="0" style="table-layout: fixed;">
	<tr>
		<th width="100">Property</th>
		<th>Value (<a href="$control.createActionURL("refresh", "")">Refresh</a>)</th>
	</tr>
	#foreach($prop in $control.getPropertyNames())
	<tr>
		<td width="100"><b>$prop</b></td>
		<td>$insert.control($control.getControlName($prop))</td>
	</tr>
	#end
</table>